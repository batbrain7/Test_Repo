<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#2b2b2b"
    tools:context="com.example.mohitkumar.calcor.MainActivity"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textv"
        android:textColor="#fefaf8"
        android:textSize="40dp"
        android:textStyle="bold"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textv"
        android:id="@+id/onechar"
        android:textColor="#fd8204"
        android:textIsSelectable="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="9"
        android:textSize="20dp"
        android:layout_below="@+id/onechar"
        android:id="@+id/nine"
        android:onClick="clickbutton"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/onechar"
        android:layout_toRightOf="@+id/nine"
        android:textSize="20dp"
        android:id="@+id/eight"
        android:text="8"
        android:onClick="clickbutton"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/onechar"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/eight"
        android:text="7"
        android:id="@+id/seven"
        android:onClick="clickbutton"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/nine"
        android:text="6"
        android:textSize="20dp"
        android:id="@+id/six"
        android:onClick="clickbutton"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/nine"
        android:text="5"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/six"
        android:id="@+id/five"
        android:onClick="clickbutton"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/nine"
        android:text="4"
        android:layout_toRightOf="@+id/five"
        android:id="@+id/four"
        android:textSize="20dp"
        android:onClick="clickbutton"
        />
    
    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/six"
        android:text="3"
        android:id="@+id/three"
        android:textSize="20dp"
        android:onClick="clickbutton"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/six"
        android:text="2"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/three"
        android:id="@+id/two"
        android:onClick="clickbutton"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/six"
        android:text="1"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/two"
        android:id="@+id/one"
        android:onClick="clickbutton"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/three"
        android:text="."
        android:textSize="20dp"
        android:id="@+id/point"
        android:onClick="clickbutton"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="0"
        android:textSize="20dp"
        android:layout_below="@+id/two"
        android:layout_toRightOf="@+id/point"
        android:id="@+id/zero"
        android:onClick="clickbutton"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/one"
        android:layout_toRightOf="@+id/zero"
        android:text="DEL"
        android:textSize="20dp"
        android:id="@+id/equals"
        android:onClick="clickbutton"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/onechar"
        android:layout_toRightOf="@+id/seven"
        android:text="X"
        android:textSize="20dp"
        android:onClick="clickbutton"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/seven"
        android:layout_toRightOf="@+id/four"
        android:text="/"
        android:textSize="20dp"
        android:onClick="clickbutton"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/four"
        android:layout_toRightOf="@+id/one"
        android:text="+"
        android:textSize="20dp"
        android:onClick="clickbutton"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/one"
        android:layout_toRightOf="@+id/equals"
        android:text="-"
        android:textSize="20dp"
        android:onClick="clickbutton"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_below="@+id/zero"
        android:text="C"
        android:textSize="20dp"
        android:id="@+id/divide"
        android:onClick="clickbutton"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_below="@+id/equals"
        android:layout_alignParentRight="true"
        android:text="="
        android:textSize="20dp"
        android:onClick="clickbutton"
        />

</RelativeLayout>
